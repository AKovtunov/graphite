#!upstart
# http://upstart.ubuntu.com/cookbook/
#
description carbon-<%= @name %>

start on runlevel [2345]
stop on shutdown

respawn
respawn limit 99 5

setuid <%= @user %>

<% @caches.each do |instance| -%>
env LOGFILE_<%= instance.first %>=<%= @dir %>/storage/log/carbon-<%= @name %>/carbon-<%= @name %>-<%= instance.first %>/console.log
<% end -%>

pre-start script
    for INSTANCE in <% @caches.each do |instance| -%><%= instance.first %> <% end -%>; do
        LOGFILE="LOGFILE_$INSTANCE"
        LOGDIR=`dirname ${!LOGFILE}`
        [ -d $LOGDIR ] || mkdir -p $LOGDIR
        chown -R <%= @user %> $LOGDIR
    done
end script

script
    for INSTANCE in <% @caches.each do |instance| -%><%= instance.first %> <% end -%>; do
        <%= @dir %>/bin/carbon-<%= @name %>.py --debug --instance=$INSTANCE start >> $LOGFILE 2>&1
    done
end script
